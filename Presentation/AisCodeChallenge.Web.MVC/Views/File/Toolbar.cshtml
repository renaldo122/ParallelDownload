<br />
<nav class="navbar navbar-light bg-light">
    <form class="form-inline">
        <button type="button" class="btn btn-default" onclick="App.RefreshFiles()">Refresh</button>

        <div class="form-group mx-sm-3 mb-2">
            <label>Degree of parallelism</label>
        </div>
        <div class="form-group mx-sm-1 mb-1" style="width:100px">
            <input type="text" style="width:100px" class="form-control" id="degreeOfParallelism" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');" value="2">
        </div>
        <button type="button" class="btn btn-default" onclick="App.DownloadFiles()" id="btnDownload">Download</button>

        <div class="form-group" id="IdFrmGroupCancel" style="visibility:hidden">
            <div class="form-group mx-sm-3 mb-2" id="IdLoader">
                <div class="loader"></div>
            </div>
            <button type="button" class="btn btn-default" onclick="App.CancelDownload()">Cancel</button>
        </div>

    </form>
</nav>


<!-- Modal to cancel downloading files -->
<div class="modal fade" id="downloadModal" tabindex="-1" role="dialog" aria-labelledby="downloadModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Downloading files</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="margin-left: auto; margin-right: auto; width: 8em;">
                    <p>Loading...</p>
                    <div class="loader"></div>
             </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" onclick="App.CancelDownload()">Cancel</button>
            </div>
        </div>
    </div>
</div>